{
  "name": "app-id",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "lint": "pnpm -r run lint",
    "spj": "pnpm dlx sort-package-json@latest \"package.json\" \"packages/*/package.json\"",
    "start": "pnpm -r run start",
    "shadcn": "pnpm --filter @app-id/next run shadcn"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^9",
    "eslint-config-next": "^15.0.0-rc.0",
    "eslint-config-prettier": "^9",
    "eslint-plugin-unicorn": "^53",
    "eslint-plugin-unused-imports": "^4",
    "prettier": "^3",
    "typescript": "^5",
    "typescript-eslint": "^7"
  }
}
